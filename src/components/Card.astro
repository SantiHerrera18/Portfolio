---
const { name, img, link } = Astro.props;
---

<a
  href={`${link}`}
  target="_blank"
  class="flex flex-col items-center justify-center min-w-[250px] min-h-[250px] max-w-[250px] max-h-[250px] overflow-hidden rounded-lg"
>
  <div
    style={`background-image: linear-gradient(transparent, rgba(0, 0, 0, 1)),
                  url("${img}")`}
    class="relative z-0 w-[100%] h-[250px] bg-cover bg-center rounded-lg shadow-xl flex flex-col justify-end p-2 hover:scale-105 transition-all duration-150"
  >
    <h3 class="relative z-10 font-semibold text-center pb-2">{name}</h3>
  </div>
</a>
