---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Technologies from "../components/Technologies.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <section
      class="h-screen bg-slate-400 flex gap-[20vh] pb-[15vh] justify-center items-center"
    >
      <div>
        <div class="text-8xl font-bold text-shadow-xl mb-4">
          <p>Santiago</p>
          <p class="text-slate-600">Herrera</p>
        </div>
        <p class="text-xl text-slate-600 font-semibold">
          Full stack developer specialized in <strong>frontend</strong>
        </p>
      </div>
      <div class="w-[250px] h-[250px] rounded-full bg-slate-600"></div>
    </section>
    <section id="experience">
      <h2 class="text-3xl font-bold">Experience</h2>
      <p>I have worked in projects as:</p>
    </section>
    <section>
      <h2 class="text-3xl font-bold mb-3">Projects</h2>
      <div class="grid grid-cols-2 gap-3">
        <Card name="Hotelify" img="/Hotelify.jpg" />
        <Card name="Bytezone" img="/Bytezone.jpg" />
      </div>
    </section>
    <section>
      <h3 class="text-2xl font-bold mb-3">Technologies</h3>
      <Technologies />
    </section>
  </main>
</Layout>
