<Layout title="Portfolio">
  <main>
    <section class="h-screen bg-slate-300 flex justify-center items-center">
      <div class="w-[40%]">
        <div class="text-8xl font-bold text-shadow-xl mb-4 flex flex-col">
          <p class="select-none inline-block">Santiago</p>
          <p class="text-slate-600 select-none inline-block">Herrera</p>
        </div>
        <p
          class="text-xl text-slate-600 font-semibold inline-block w-[85%] text-balance"
        >
          Mechatronic Engineer and Full stack developer specialized in <strong
            >frontend</strong
          >. I'm passionate for developing innovative and creative solutions
        </p>
        <Technologies />
      </div>
      <div class="w-[250px] h-[250px] rounded-full bg-slate-600"></div>
    </section>
  </main>
</Layout>
